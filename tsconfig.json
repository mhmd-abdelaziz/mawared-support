{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts",
    "declarations.d.ts",
    ".expo/types/**/*.ts"
  ]
}
